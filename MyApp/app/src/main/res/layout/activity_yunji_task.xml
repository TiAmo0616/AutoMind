<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="云迹"
                android:textSize="24sp"
                android:textStyle="bold" />



            <ImageView
                android:id="@+id/division"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/title"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#B0BAB7"/>



            <TextView
                android:id="@+id/item_robertID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/division"
                android:textSize="20sp"
                android:layout_alignParentStart="true"
                android:text="ID"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/currentState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_robertID"
                android:textSize="20sp"
                android:layout_alignParentStart="true"
                android:text="状态"
                android:layout_marginEnd="20dp"/>



            <TextView
                android:id="@+id/task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/division"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:text="HOTQY00SZ200040815580001"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/task"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:text="charging"
                android:layout_marginEnd="20dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_margin="25dp"
        android:layout_height="wrap_content"
        android:text="取消任务"
        android:textSize="25sp"
        android:backgroundTint="@color/colorBlue"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/return_home"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="wrap_content"
        android:text="返回充电桩"
        android:textSize="25sp"
        android:backgroundTint="@color/colorBlue"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/openDoor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorBlue"
            android:text="开门"
            android:textSize="25sp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/closeDoor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorBlue"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="50dp"
            android:layout_height="wrap_content"
            android:text="关门"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>